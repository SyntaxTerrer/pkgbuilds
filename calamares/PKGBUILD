pkgname=('calamares')

pkgver=3.3.8
pkgrel=3
pkgdesc='Distribution-independent installer framework'
arch=($CARCH)
url="https://github.com/calamares/calamares"

license=('BSD-2-Clause'
	'CC-BY-4.0'
	'CC0-1.0'
	'GPL-3.0-or-later'
	'LGPL-2.1-only'
	'LGPL-3.0-or-later'
	'MIT')

depends=('ckbcomp'
	'efibootmgr'
	'gtk-update-icon-cache'
	'icu'
	'kpmcore>=24.01.75'
	'libpwquality'
	'mkinitcpio-openswap'
	'squashfs-tools'
	'yaml-cpp'
	'kconfig>=5.246'
	'kcoreaddons>=5.246'
	'ki18n>=5.246'
	'kiconthemes>=5.246'
	'kio>=5.246'
	'polkit-qt6>=0.175.0'
	'qt6-base>=6.6.0'
	'qt6-svg>=6.6.0'
	'solid>=5.246'
	'qt6-tools'
	'qt6-translations')

makedepends=('extra-cmake-modules' 'git' 'qt6-tools' 'qt6-translations' 'qt6-svg' 'qt6-base' 'polkit-qt6' 'kconfig' 'kcoreaddons' 'ki18n' 'kiconthemes' 'kio' 'solid')

backup=('usr/share/calamares/modules/bootloader.conf'
	'usr/share/calamares/modules/displaymanager.conf'
	'usr/share/calamares/modules/initcpio.conf'
	'usr/share/calamares/modules/unpackfs.conf')

source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz"
	"calamares.desktop"
	"calamares_polkit"
	"49-nopasswd-calamares.rules"
	"paru-support.patch"
	"flag.patch")

sha256sums=('523a0e4cfefbe471d9a6a5d874018fe282a4ce3667ff560bd97190339be6b592'
